<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TripBliss.Pages.DistributorsPages.ResponseDetailes.HotelServicePage"
             xmlns:vm="clr-namespace:TripBliss.ViewModels.DistributorsViewModels.ResponseDetails"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False"
             Title="HotelServiceModelsPage">
    <ContentPage.BindingContext>
        <vm:HotelServiceViewModel></vm:HotelServiceViewModel>
    </ContentPage.BindingContext>
    <StackLayout Orientation="Vertical" Margin="20">
        <StackLayout Orientation="Horizontal" >
            <ImageButton WidthRequest="30" HeightRequest="30" VerticalOptions="CenterAndExpand" Command="{Binding BackClickedCommand}">
                <ImageButton.Source>
                    <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                </ImageButton.Source>
            </ImageButton>
            <Label Text="Hotel Service" FontSize="18" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"
                   TextColor="Black" VerticalOptions="CenterAndExpand" ></Label>
        </StackLayout>
        <ScrollView VerticalOptions="FillAndExpand">
           <StackLayout >
        <Border StrokeShape="RoundRectangle 15" Margin="0,40" BackgroundColor="White">
            <StackLayout Orientation="Vertical" Padding="15">
                        <Label Text="Hotel Name" TextColor="#2fa562" FontSize="14" Margin="0,15,0,0"></Label>
                        <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" Margin="0,10,0,20">
                            <Entry Keyboard="Text" TextColor="Black" FontSize="13" FontFamily="OpenSansRegular" Text="{Binding HotelServiceModel.HotelName}"></Entry>
                        </Border>
                        <StackLayout Orientation="Horizontal" Spacing="35">
                            <VerticalStackLayout HorizontalOptions="FillAndExpand">
                                <Label Text="Check in" TextColor="#2fa562" FontSize="14"></Label>
                                <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" Margin="0,10">
                                    <DatePicker FontSize="13" TextColor="Black" Date="{Binding HotelServiceModel.Checkin}"></DatePicker>
                                </Border>
                            </VerticalStackLayout>
                            <VerticalStackLayout HorizontalOptions="FillAndExpand">
                                <Label Text="Check out" TextColor="#2fa562" FontSize="14"></Label>
                                <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" Margin="0,10">
                                    <DatePicker FontSize="13" TextColor="Black"  Date="{Binding HotelServiceModel.Checkout}"></DatePicker>
                                </Border>
                            </VerticalStackLayout>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="35">
                            <VerticalStackLayout HorizontalOptions="FillAndExpand">
                                <Label Text="Room View" TextColor="#2fa562" FontSize="14" Margin="0,15,0,0"></Label>
                                <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" Margin="0,10">
                                    <Entry Keyboard="Text" TextColor="Black" FontSize="13" FontFamily="OpenSansRegular"
                                           Text="{Binding HotelServiceModel.RoomView}"></Entry>
                                </Border>
                            </VerticalStackLayout>
                            <VerticalStackLayout HorizontalOptions="FillAndExpand">
                                <Label Text="Room Type" TextColor="#2fa562" FontSize="14" Margin="0,15,0,0"></Label>
                                <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" Margin="0,10">
                                    <Entry Keyboard="Text" TextColor="Black" FontSize="13" FontFamily="OpenSansRegular"
                                           Text="{Binding HotelServiceModel.RoomType}"></Entry>
                                </Border>
                            </VerticalStackLayout>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Spacing="35">
                            <VerticalStackLayout HorizontalOptions="FillAndExpand">
                                <Label Text="Meals" TextColor="#2fa562" FontSize="14" Margin="0,15,0,0"></Label>
                                <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" Margin="0,10">
                                    <Entry Keyboard="Text" TextColor="Black" FontSize="13" FontFamily="OpenSansRegular"
                                           Text="{Binding HotelServiceModel.Meals}"></Entry>
                                </Border>
                            </VerticalStackLayout>
                            <StackLayout Orientation="Horizontal"  HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" Margin='0,0,0,15'>
                                <ImageButton WidthRequest="20" Command="{Binding AddRoomCommand}">
                                    <ImageButton.Source>
                                        <FontImageSource Glyph="+" FontFamily="FontIconSolid" Color="#2fa562"></FontImageSource>
                                    </ImageButton.Source>
                                </ImageButton>
                                <Border StrokeShape="RoundRectangle 5" HorizontalOptions="CenterAndExpand" Padding="10,5" Stroke="Gray">
                                    <Label Text="{Binding Num}" TextColor="#2fa562" FontSize="20" VerticalTextAlignment="Center" 
                                           FontAttributes="Bold"></Label>
                                </Border>
                        
                                <ImageButton WidthRequest="20" Command="{Binding DeletRoomCommand}">
                                    <ImageButton.Source>
                                        <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="#2fa562"></FontImageSource>
                                    </ImageButton.Source>
                                </ImageButton>
                            </StackLayout>
                        </StackLayout>
                        <Label Text="Price" TextColor="#2fa562" FontSize="14" Margin="0,15,0,10"></Label>
                        <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" >
                            <Entry Keyboard="Numeric" TextColor="Black" FontSize="13" FontFamily="OpenSansRegular" Text="{Binding HotelServiceModel.price}"></Entry>
                        </Border>
                        <Label Text="Notes" TextColor="#2fa562" FontSize="14" Margin="0,20,0,0"></Label>
                        <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" Margin="0,10" HeightRequest="100">
                    <Entry Keyboard="Text" TextColor="Black" FontSize="13" FontFamily="OpenSansRegular" 
                           Text="{Binding HotelServiceModel.Notes}"></Entry>
                </Border>
            </StackLayout>
            <Border.Shadow>
                <Shadow Brush="Black" Offset="8,8" Opacity="0.8"></Shadow>
            </Border.Shadow>
        </Border>
        <Button VerticalOptions="EndAndExpand" Text="Apply" FontSize="14" BackgroundColor="#2fa562" TextColor="White" Margin="20,0"
                Command="{Binding ApplyHotelClickedCommand}"></Button>
    </StackLayout> 
        </ScrollView>
    </StackLayout>
    
</ContentPage>