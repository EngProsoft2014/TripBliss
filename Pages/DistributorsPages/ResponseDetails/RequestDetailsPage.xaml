                                                    <Setter Property="HeightRequest" Value="0"></Setter>
                                                </DataTrigger>
                                                <DataTrigger TargetType="StackLayout" Binding="{Binding transportaionServices.Count}" Value="1">
                                                    <Setter Property="HeightRequest" Value="150"></Setter>
                                                </DataTrigger>
                                                <DataTrigger TargetType="StackLayout" Binding="{Binding transportaionServices.Count}" Value="2">
                                                    <Setter Property="HeightRequest" Value="190"></Setter>
                                                </DataTrigger>
                                                <DataTrigger TargetType="StackLayout" Binding="{Binding transportaionServices.Count}" Value="3">
                                                    <Setter Property="HeightRequest" Value="240"></Setter>
                                                </DataTrigger>
                                                <DataTrigger TargetType="StackLayout" Binding="{Binding transportaionServices.Count}" Value="4">
                                                    <Setter Property="HeightRequest" Value="290"></Setter>
                                                </DataTrigger>
