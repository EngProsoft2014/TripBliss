                                                <DataTrigger TargetType="StackLayout" Binding="{Binding visaServices.Count}" Value="0">
                                                    <Setter Property="IsVisible" Value="False"></Setter>
                                                    <Setter Property="HeightRequest" Value="0"></Setter>
                                                </DataTrigger>
                                                <DataTrigger TargetType="StackLayout" Binding="{Binding visaServices.Count}" Value="1">
                                                    <Setter Property="HeightRequest" Value="150"></Setter>
                                                </DataTrigger>
