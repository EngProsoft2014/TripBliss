                                                            <Label>
                                                                <Label.FormattedText>
                                                                    <FormattedString>
                                                                        <Span Text="Check-in: " TextColor="Black" FontSize="14"></Span>
                                                                        <Span Text="27-5-2023" TextColor="Black" FontSize="14"></Span>
                                                                    </FormattedString>
                                                                </Label.FormattedText>
                                                            </Label>
                                                            <Label HorizontalOptions="EndAndExpand">
                                                                <Label.FormattedText>
                                                                    <FormattedString>
                                                                        <Span Text="Check-Out: " TextColor="Black" FontSize="14"></Span>
                                                                        <Span Text="30-5-2023" TextColor="Black" FontSize="14"></Span>
                                                                    </FormattedString>
                                                                </Label.FormattedText>
                                                            </Label>
                                                        </StackLayout>
                                                        <Label Text="Room Details:" TextColor="#387955" FontSize="14" FontAttributes="Bold" Margin="0,5" FontFamily="OpenSansSemibold"
                       Padding="5"></Label>
                                                        <Border StrokeShape="RoundRectangle 8" StrokeThickness="1" Padding="7" Margin="5,0">
                                                            <VerticalStackLayout Spacing="3">
                                                                <StackLayout Orientation="Horizontal">
                                                                    <Label>
                                                                        <Label.FormattedText>
                                                                            <FormattedString>
                                                                                <Span Text="Type: " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Span>
                                                                                <Span Text="QUD" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Span>
                                                                            </FormattedString>
                                                                        </Label.FormattedText>
                                                                    </Label>
                                                                    <Label HorizontalOptions="EndAndExpand">
                                                                        <Label.FormattedText>
                                                                            <FormattedString>
                                                                                <Span Text="View: " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Span>
                                                                                <Span Text="KV" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Span>
                                                                            </FormattedString>
                                                                        </Label.FormattedText>
                                                                    </Label>
                                                                </StackLayout>
                                                                <StackLayout Orientation="Horizontal">
                                                                    <Label>
                                                                        <Label.FormattedText>
                                                                            <FormattedString>
                                                                                <Span Text="No. Of Rooms: " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Span>
                                                                                <Span Text="02" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Span>
                                                                            </FormattedString>
                                                                        </Label.FormattedText>
                                                                    </Label>
                                                                    <Label HorizontalOptions="EndAndExpand">
                                                                        <Label.FormattedText>
                                                                            <FormattedString>
                                                                                <Span Text="Males: " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Span>
                                                                                <Span Text="B/B" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Span>
                                                                            </FormattedString>
                                                                        </Label.FormattedText>
                                                                    </Label>
                                                                </StackLayout>
                                                                <StackLayout Orientation="Horizontal">
                                                                    <Label>
                                                                        <Label.FormattedText>
                                                                            <FormattedString>
                                                                                <Span Text="Rate Per Room: " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Span>
                                                                                <Span Text="$70" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Span>
                                                                            </FormattedString>
                                                                        </Label.FormattedText>
                                                                    </Label>
                                                                    <Label HorizontalOptions="EndAndExpand">
                                                                        <Label.FormattedText>
                                                                            <FormattedString>
                                                                                <Span Text="Rate Basis: " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Span>
                                                                                <Span Text="2B/S" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Span>
                                                                            </FormattedString>
                                                                        </Label.FormattedText>
