<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TripBliss.ViewModels"
             x:Class="TripBliss.Pages.SignUpPage"
             Title="SignUpPage"
             IsBusy="{Binding IsBusy}"
             NavigationPage.HasNavigationBar="False" 
             BackgroundColor="White">
    <ContentPage.BindingContext>
        <vm:SignUpViewModdel></vm:SignUpViewModdel>
    </ContentPage.BindingContext>
    <ScrollView VerticalOptions="FillAndExpand">
        <VerticalStackLayout Margin="30">
            <Image Source="https://iconape.com/wp-content/png_logo_vector/bntu.png" WidthRequest="140" ></Image>
        <Border StrokeShape="RoundRectangle 20" StrokeThickness="1" Stroke="Gray" VerticalOptions="Center" Margin="0,10,0,0">
            <VerticalStackLayout Margin="20" Spacing="20">
                <Image>
                    <Image.Source>
                        <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                    </Image.Source>
                </Image>
                <Border StrokeShape="RoundRectangle 30" StrokeThickness="1" Stroke="Gray">
                    <Entry Keyboard="Text" TextColor="Black" FontSize="16" FontAttributes="Bold" Placeholder="Company Name" HorizontalTextAlignment="Center"
                           Margin="10,2" FontFamily="OpenSansRegular" Text="{Binding Companyname}"></Entry>
                </Border>
                <Border StrokeShape="RoundRectangle 30" StrokeThickness="1" Stroke="Gray">
                    <Entry Keyboard="Numeric" TextColor="Black" FontSize="16" FontAttributes="Bold" Placeholder="Company Phone"
                           HorizontalTextAlignment="Center" Margin="10,2" FontFamily="OpenSansRegular" Text="{Binding Companyphone}"></Entry>
                </Border>
                <Border StrokeShape="RoundRectangle 30" StrokeThickness="1" Stroke="Gray">
                    <Entry Keyboard="Email" TextColor="Black" FontSize="16" FontAttributes="Bold" Placeholder="Email" HorizontalTextAlignment="Center"
                           Margin="10,2" FontFamily="OpenSansRegular" Text="{Binding Email}"></Entry>
                </Border>
                <Border StrokeShape="RoundRectangle 30" StrokeThickness="1" Stroke="Gray">
                    <Entry Keyboard="Text" TextColor="Black" FontSize="16" FontAttributes="Bold" Placeholder="Password" HorizontalTextAlignment="Center"
                           Margin="10,2" FontFamily="OpenSansRegular" IsPassword="True" Text="{Binding Password}"></Entry>
                </Border>
                <Border StrokeShape="RoundRectangle 30" StrokeThickness="1" Stroke="Gray">
                    <Entry Keyboard="Text" TextColor="Black" FontSize="16" FontAttributes="Bold" Placeholder="Confirme Password"
                           HorizontalTextAlignment="Center" Margin="10,2" FontFamily="OpenSansRegular" Text="{Binding Confirmpassword}"></Entry>
                </Border>
                <Border StrokeShape="RoundRectangle 30" StrokeThickness="1" Stroke="Gray">
                    <StackLayout Orientation="Horizontal">
                        <Entry Keyboard="Text" TextColor="Black" FontSize="16" FontAttributes="Bold" Placeholder="QR Code (Optional)"
                               HorizontalTextAlignment="Center" Margin="10,2" FontFamily="OpenSansRegular" HorizontalOptions="FillAndExpand"
                               Text="{Binding Qrcode}"></Entry>
                        <ImageButton WidthRequest="30" HeightRequest="30" Margin="0,0,10,0" Clicked="QrCodeClicked">
                            <ImageButton.Source>
                                <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                            </ImageButton.Source>
                        </ImageButton>
                    </StackLayout>
                </Border>
                <Button Text="SIGN UP" BackgroundColor="#2FA562" TextColor="White" WidthRequest="140" CornerRadius="20" Margin="0,30,0,0"
                        ></Button>
            </VerticalStackLayout>
        </Border>
        <Label Margin="0,15,0,0">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="I've got an account already? " TextColor="Gray" FontSize="14" FontFamily="OpenSansRegular"></Span>
                    <Span Text="Sign In" TextColor="Orange" FontSize="14" FontFamily="OpenSansRegular" FontAttributes="Bold">
                        <Span.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSignIn"></TapGestureRecognizer>
                        </Span.GestureRecognizers>
                    </Span>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>