<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TripBliss.Pages.TravelAgenciesPages.CreateRequest.NewRequestPage"
             xmlns:vm="clr-namespace:TripBliss.ViewModels.TravelAgenciesVieModels.CreateRequest"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False"
             Title="NewRequestPage">
    <ContentPage.BindingContext>
        <vm:NewRequestViewModdel></vm:NewRequestViewModdel>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <Style TargetType="StackLayout">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup Name="CommonStates">
                        <VisualState Name="Normal"></VisualState>
                        <VisualState Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="Transparent"></Setter>
                            </VisualState.Setters>
                        </VisualState>

                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
            

        </Style>
    </ContentPage.Resources>
    <StackLayout Orientation="Vertical" Margin="20" Spacing="10">
        <StackLayout Orientation="Horizontal">
            <ImageButton WidthRequest="30" HeightRequest="30" VerticalOptions="CenterAndExpand" Command="{Binding BackButtonClickedCommand}">
                <ImageButton.Source>
                    <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                </ImageButton.Source>
            </ImageButton>
            <Label Text="New Request" FontSize="18" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"
TextColor="Black" VerticalOptions="CenterAndExpand" ></Label>
        </StackLayout>
        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout Spacing="10">

                <StackLayout Orientation="Horizontal" Margin="0,15,15,0">
                    <Label Text="Hotel Services" FontSize="16" TextColor="DarkOrange" VerticalTextAlignment="Center"></Label>
                    <Border StrokeShape="RoundRectangle 8" WidthRequest="25" HeightRequest="25" HorizontalOptions="EndAndExpand" Stroke="#2fa562"
                    StrokeThickness="1.5" Padding="2">
                        <ImageButton WidthRequest="20" VerticalOptions="StartAndExpand" Command="{Binding AddHotelCommand}">
                            <ImageButton.Source>
                                <FontImageSource Glyph="+" FontFamily="FontIconSolid" Color="#2fa562"></FontImageSource>
                            </ImageButton.Source>
                        </ImageButton>
                    </Border>
                </StackLayout>
                <Border StrokeShape="RoundRectangle 5" HorizontalOptions="FillAndExpand" >
                    <CollectionView ItemsSource="{Binding Hotels}" VerticalOptions="FillAndExpand" SelectedItem="{Binding SelectedHotel}"
                                    SelectionChangedCommand="{Binding  SelectHotelCommand}" SelectionMode="Single">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Horizontal" Spacing="20" Padding="3" Margin="0,5">
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding HotelName}" TextColor="Gray" FontSize="12"></Span>
                                                <Span Text=" - " TextColor="Gray" FontSize="14"></Span>
                                                <Span Text="{Binding RoomView}" TextColor="Gray" FontSize="12"></Span>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding Checkin}" TextColor="Gray" FontSize="12"></Span>
                                                <Span Text=" - " TextColor="Gray" FontSize="14"></Span>
                                                <Span Text="{Binding Checkout}" TextColor="Gray" FontSize="12"></Span>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <ImageButton WidthRequest="20" HeightRequest="20" HorizontalOptions="EndAndExpand">
                                        <ImageButton.Source>
                                            <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                                        </ImageButton.Source>
                                    </ImageButton>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>
                <StackLayout Orientation="Horizontal" Margin="0,0">
                    <Label Text="Transportaion Services" FontSize="16" TextColor="DarkOrange" FontAttributes="None" VerticalTextAlignment="Center"></Label>
                    <Border StrokeShape="RoundRectangle 8" WidthRequest="25" HeightRequest="25" HorizontalOptions="EndAndExpand" Stroke="#2fa562"
                    StrokeThickness="1.5" Padding="2">
                        <ImageButton WidthRequest="20" VerticalOptions="StartAndExpand" Command="{Binding AddTransportaionCommand}">
                            <ImageButton.Source>
                                <FontImageSource Glyph="+" FontFamily="FontIconSolid" Color="#2fa562"></FontImageSource>
                            </ImageButton.Source>
                        </ImageButton>
                    </Border>
                </StackLayout>
                <Border StrokeShape="RoundRectangle 5" HorizontalOptions="FillAndExpand" >
                    <CollectionView ItemsSource="{Binding transportaionServices}" VerticalOptions="FillAndExpand" SelectionMode="Single"
                                    SelectedItem="{Binding SelectedTransportaition}" SelectionChangedCommand="{Binding  SelectTransportaionCommand}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Horizontal" Spacing="20" Padding="3" Margin="0,5">
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="M.Sprinter " TextColor="#2fa562" FontSize="12" FontAttributes="Bold"></Span>
                                                    <Span Text="{Binding From}" TextColor="Gray" FontSize="12"></Span>
                                                    <Span Text=" - " TextColor="Gray" FontSize="14"></Span>
                                                    <Span Text="{Binding To}" TextColor="Gray" FontSize="12"></Span>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding Nos}" TextColor="Gray" FontSize="12"></Span>
                                                    <Span Text=" - " TextColor="Gray" FontSize="14"></Span>
                                                    <Span Text="{Binding Date}" TextColor="Gray" FontSize="12"></Span>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <ImageButton WidthRequest="20" HeightRequest="20" HorizontalOptions="EndAndExpand">
                                            <ImageButton.Source>
                                                <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                                            </ImageButton.Source>
                                        </ImageButton>
                                    </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>
                <StackLayout Orientation="Horizontal" Margin="0,0">
                    <Label Text="Air Flight Services" FontSize="16" TextColor="DarkOrange" FontAttributes="None" VerticalTextAlignment="Center"></Label>
                    <Border StrokeShape="RoundRectangle 8" WidthRequest="25" HeightRequest="25" HorizontalOptions="EndAndExpand" Stroke="#2fa562"
                    StrokeThickness="1.5" Padding="2">
                        <ImageButton WidthRequest="20" VerticalOptions="StartAndExpand" Command="{Binding AddAirFlightCommand}">
                            <ImageButton.Source>
                                <FontImageSource Glyph="+" FontFamily="FontIconSolid" Color="#2fa562"></FontImageSource>
                            </ImageButton.Source>
                        </ImageButton>
                    </Border>
                </StackLayout>
                <Border StrokeShape="RoundRectangle 5" HorizontalOptions="FillAndExpand" >
                    <CollectionView ItemsSource="{Binding airFlights}" VerticalOptions="FillAndExpand" SelectedItem="{Binding SelectedAirFlight}"
                                    SelectionChangedCommand="{Binding  SelectAirFlightCommand}" SelectionMode="Single">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                    <StackLayout Orientation="Horizontal" Spacing="20" Padding="3" Margin="0,5">
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="QR " TextColor="#2fa562" FontSize="12" FontAttributes="Bold"></Span>
                                                    <Span Text="1178" TextColor="#2fa562" FontSize="12"></Span>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding From}" TextColor="Gray" FontSize="12"></Span>
                                                    <Span Text=" - " TextColor="Gray" FontSize="14"></Span>
                                                    <Span Text="{Binding To}" TextColor="Gray" FontSize="12"></Span>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding Child}" TextColor="Gray" FontSize="12"></Span>
                                                    <Span Text="  " TextColor="Gray" FontSize="14"></Span>
                                                    <Span Text="{Binding Date}" TextColor="Gray" FontSize="12"></Span>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <ImageButton WidthRequest="20" HeightRequest="20" HorizontalOptions="EndAndExpand">
                                            <ImageButton.Source>
                                                <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                                            </ImageButton.Source>
                                        </ImageButton>
                                    </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>
                <StackLayout Orientation="Horizontal" Margin="0,0">
                    <Label Text="Visa Service" FontSize="16" TextColor="DarkOrange" FontAttributes="None" VerticalTextAlignment="Center"></Label>
                    <Border StrokeShape="RoundRectangle 8" WidthRequest="25" HeightRequest="25" HorizontalOptions="EndAndExpand" Stroke="#2fa562"
                    StrokeThickness="1.5" Padding="2">
                        <ImageButton WidthRequest="20" VerticalOptions="StartAndExpand" Command="{Binding AddVisaCommand}">
                            <ImageButton.Source>
                                <FontImageSource Glyph="+" FontFamily="FontIconSolid" Color="#2fa562"></FontImageSource>
                            </ImageButton.Source>
                        </ImageButton>
                    </Border>
                </StackLayout>
                <Border StrokeShape="RoundRectangle 5" HorizontalOptions="FillAndExpand" >
                    <CollectionView ItemsSource="{Binding visaServices}" VerticalOptions="FillAndExpand" SelectedItem="{Binding SelectedVisa}"
                                    SelectionChangedCommand="{Binding  SelectVisaCommand}" SelectionMode="Single">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Horizontal" Spacing="20" Padding="3" Margin="0,5">
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="#" TextColor="#2fa562" FontSize="12" FontAttributes="Bold"></Span>
                                                    <Span Text="{Binding VisaNo}" TextColor="#2fa562" FontSize="12"></Span>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding VisaType}" TextColor="Gray" FontSize="12"></Span>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label>
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding VisaNo}" TextColor="Gray" FontSize="12"></Span>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <ImageButton WidthRequest="20" HeightRequest="20" HorizontalOptions="EndAndExpand">
                                            <ImageButton.Source>
                                                <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                                            </ImageButton.Source>
                                        </ImageButton>
                                    </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>
            </StackLayout>
        </ScrollView>
    </StackLayout>
    
</ContentPage>