                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                                <HorizontalStackLayout Spacing="8" Margin="20,0">
                                    <Image WidthRequest="20" HeightRequest="20">
                                        <Image.Source>
                                            <FontImageSource Glyph="" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                                        </Image.Source>
                                    </Image>
                                    <Label Text="{Static res:AppResources.lblExit_More}" FontAutoScalingEnabled="False" TextColor="Gray" FontSize="14" VerticalTextAlignment="Start" FontAttributes="Bold"></Label>
                                    <HorizontalStackLayout.GestureRecognizers>
