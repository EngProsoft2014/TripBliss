                                                            <Label FontSize="14" Text="{Static res:AppResources.lblModelName_RequestDetails}" FontAutoScalingEnabled="False" TextColor="Black" 
                                                                   FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                   HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                        
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="Notes" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="{Static res:AppResources.lblNotes_HotelService}" FontAutoScalingEnabled="False" TextColor="Black" 
                                                                   FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                   HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="BrandName" HeaderTextAlignment="Center" Visible="False">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
