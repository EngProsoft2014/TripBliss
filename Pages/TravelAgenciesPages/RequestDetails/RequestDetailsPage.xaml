                                                                    <Span Text="Check-in: " TextColor="Black" FontSize="13"></Span>
                                                                    <Span Text="27-5-2023" TextColor="Gray" FontSize="12"></Span>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        <Label HorizontalOptions="EndAndExpand">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="Check-Out: " TextColor="Black" FontSize="13"></Span>
                                                                    <Span Text="30-5-2023" TextColor="Gray" FontSize="12"></Span>
