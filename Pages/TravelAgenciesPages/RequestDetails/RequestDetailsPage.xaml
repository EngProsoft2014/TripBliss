                                                                                <Label Text="10" TextColor="DarkOrange" FontSize="14" FontAutoScalingEnabled="False" FontAttributes="Bold"></Label>
                                                                            </StackLayout>
                                                                        </VerticalStackLayout>
                                                                    </Border>
                                                                </VerticalStackLayout>
                                                            </StackLayout>
                                                        </Border>
                                                    </StackLayout>
                                                </StackLayout>
                                            </DataTemplate>
