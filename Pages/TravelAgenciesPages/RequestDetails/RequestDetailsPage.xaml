                                                                                <Label Text="2B/S" TextColor="DarkOrange" FontAutoScalingEnabled="False" FontSize="14" FontAttributes="Bold"></Label>
                                                                            </StackLayout>
                                                                            <StackLayout Orientation="Horizontal">
                                                                                <Label Text="{Static res:AppResources.lblMRPD_RequestDetails}" FontAutoScalingEnabled="False" TextColor="Gray"
                                                                       FontSize="14" FontAttributes="Bold"></Label>
