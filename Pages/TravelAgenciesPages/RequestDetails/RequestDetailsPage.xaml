                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="ModelName" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
