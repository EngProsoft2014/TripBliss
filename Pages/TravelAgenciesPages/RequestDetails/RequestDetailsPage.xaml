                                                    <Span Text=" - " TextColor="Black" FontAttributes="Bold" FontSize="14"></Span>
                                                    <Span Text="Child :" TextColor="Black" FontSize="14" FontAttributes="Bold"></Span>
                                                    <Span Text="2" TextColor="Gray" FontAttributes="Bold" FontSize="14"></Span>
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label HorizontalOptions="EndAndExpand">
