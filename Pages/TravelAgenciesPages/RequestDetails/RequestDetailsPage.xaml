                                                                        <FormattedString>
                                                                            <Span Text="Males: " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Span>
                                                                            <Span Text="B/B" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Span>
                                                                        </FormattedString>
                                                                    </Label.FormattedText>
                                                                </Label>
                                                            </StackLayout>
                                                            <StackLayout Orientation="Horizontal">
                                                                <Label>
                                                                    <Label.FormattedText>
