                                                            <StackLayout Orientation="Horizontal">

                                                                <Label Text="{ex:Translate Name=lblRoomType-HotelService}" TextColor="Gray" FontSize="14"
                                                                       FontAttributes="Bold"></Label>
                                                                <Label Text=": " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Label>
                                                                <Label Text="QUD" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Label>

                                                                <Label Text="{ex:Translate Name=lblView-RequestDetails}" TextColor="Gray" FontSize="14"
                                                                       FontAttributes="Bold" HorizontalOptions="EndAndExpand"></Label>
                                                                <Label Text=": " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Label>
                                                                <Label Text="KW" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Label>
                                                            </StackLayout>
                                                            <StackLayout Orientation="Horizontal">
                                                                <Label Text="{ex:Translate Name=lblNoOfRoom-HotelService}" TextColor="Gray" FontSize="14"
                                                                       FontAttributes="Bold"></Label>
                                                                <Label Text=": " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Label>
                                                                <Label Text="02" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Label>
                                                                <Label Text="{ex:Translate Name=lblMeals-HotelService}" TextColor="Gray" FontSize="14"
                                                                       HorizontalOptions="EndAndExpand" FontAttributes="Bold"></Label>
                                                                <Label Text=": " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Label>
                                                                <Label Text="02" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Label>
                                                            </StackLayout>
                                                            <StackLayout Orientation="Horizontal">
