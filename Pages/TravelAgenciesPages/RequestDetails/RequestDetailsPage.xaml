<?xml version="1.0" encoding="utf-8" ?>
<Controls:CustomControl xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TripBliss.Pages.TravelAgenciesPages.RequestDetails.RequestDetailsPage"
             xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             xmlns:Controls="clr-namespace:TripBliss.Controls"
             xmlns:vm="clr-namespace:TripBliss.ViewModels.TravelAgenciesViewModels.RequestDetails"
             xmlns:ex="clr-namespace:TripBliss.Extensions"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False"
             Title="RequestDeatielsPage">
    <Controls:CustomControl.Resources>
        <Style TargetType="syncfusion:DataGridCell">
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Controls:CustomControl.Resources>

    <tabView:SfTabView TabBarPlacement="Bottom" VerticalOptions="EndAndExpand" IndicatorBackground="#1c874b" FlowDirection="LeftToRight"
                               IndicatorPlacement="Top" TabBarHeight="55" >
        <tabView:SfTabView.Items>
            <!--Request Details-->
            <tabView:SfTabItem Header="{ex:Translate Name=btnRequestDetails-RequestDetails}" FontSize="14" BackgroundColor="#f6fcf2" 
                               FontFamily="Almarai-Regular">
                <tabView:SfTabItem.Content>
                    <ContentView x:Name="DetailsContView" Margin="20">
                        <!--<ContentView.BindingContext>
                            <vm:RequestDetailsViewModel></vm:RequestDetailsViewModel>
                        </ContentView.BindingContext>-->
                        <StackLayout Orientation="Vertical" Spacing="10">
                            <StackLayout Orientation="Horizontal">
                                <ImageButton WidthRequest="30" HeightRequest="30" VerticalOptions="CenterAndExpand" Command="{Binding BackButtonCommand}">
                                    <ImageButton.Source>
                                        <FontImageSource Glyph="ï„„" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                                    </ImageButton.Source>
                                    <ImageButton.Triggers>
                                        <DataTrigger TargetType="ImageButton" Binding="{Binding Lang}" Value="ar">
                                            <Setter Property="Rotation" Value="180"></Setter>
                                        </DataTrigger>
                                    </ImageButton.Triggers>
                                </ImageButton>
                                <Label Text="{Binding RequestDetailes.RequestName}" FontSize="18" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"
                                           TextColor="Black" VerticalOptions="CenterAndExpand" ></Label>
                            </StackLayout>
                            <ScrollView VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Never">
                                <StackLayout Spacing="20">

                                    <CarouselView ItemsSource="{Binding RequestDetailes.RequestTravelAgencyHotel}" HorizontalOptions="FillAndExpand" Loop="False">
                                        <CarouselView.ItemTemplate>
                                            <DataTemplate>

                                                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" Margin="0,10">
                                                    <Label Text="{ex:Translate Name=lblHotelServices}" TextColor="DarkOrange" Margin="0,0,0,10" FontAttributes="Bold" FontSize="16">

                                                    </Label>
                                                    <!--<StackLayout Orientation="Horizontal" Margin="0,10" Spacing="5">
                                                        <Label Text="{ex:Translate Name=lblAdult-AirService}" TextColor="Black" FontSize="14" 
                                                              FontAttributes="Bold"></Label>
                                                        <Label Text=":" TextColor="Black" FontSize="14" FontAttributes="Bold"></Label>
                                                        <Label Text="2" TextColor="Gray" FontAttributes="Bold" FontSize="14"></Label>
                                                        <Label Text=" - " TextColor="Black" FontAttributes="Bold" FontSize="14"></Label>
                                                        <Label Text="{ex:Translate Name=lblChild-AirService}" TextColor="Black" FontSize="14" FontAttributes="Bold"></Label>
                                                        <Label Text=":" TextColor="Black" FontSize="14" FontAttributes="Bold"></Label>
                                                        <Label Text="2" TextColor="Gray" FontAttributes="Bold" FontSize="14"></Label>
                                                        <Label Text="{ex:Translate Name=lblDate-TranService}" TextColor="Black" FontSize="14" FontAttributes="Bold"
                                                               HorizontalOptions="EndAndExpand" FontFamily="Almarai-Regular"></Label>
                                                        <Label Text=":" TextColor="Black" FontSize="14" FontAttributes="Bold"></Label>
                                                        <Label Text="{Binding CheckIn,StringFormat='{0:d}'}" TextColor="Gray" FontAttributes="Bold" FontSize="14"></Label>
                                                    </StackLayout>-->
                                                    <StackLayout Spacing="10" HorizontalOptions="FillAndExpand">
                                                        
                                                        <Border StrokeShape="RoundRectangle 8" StrokeThickness="1" Padding="0,0,0,10"
                                                                HorizontalOptions="FillAndExpand">
                                                            <StackLayout Orientation="Vertical" >
                                                                <StackLayout Orientation="Horizontal">
                                                                    <Label VerticalTextAlignment="Center" Padding="5">
                                                                        <Label.FormattedText>
                                                                            <FormattedString>
                                                                                <Span Text="{Binding LocationName}" TextColor="Black" FontSize="14" FontAttributes="Bold"></Span>
                                                                                <Span Text=" - " TextColor="Black" FontSize="14" FontAttributes="Bold"></Span>
                                                                                <Span Text="{Binding HotelName}" TextColor="Black" FontSize="14" FontAttributes="Bold"></Span>
                                                                            </FormattedString>
                                                                        </Label.FormattedText>
                                                                    </Label>
                                                                    <Line StrokeThickness="1" Y1="0" Y2="40" Stroke="Gray" HorizontalOptions="EndAndExpand"></Line>
                                                                    <VerticalStackLayout Margin="10,0" VerticalOptions="CenterAndExpand">
                                                                        <Label Text="{Binding NumberOfNights}" FontSize="11" TextColor="#387955" FontAttributes="Bold" HorizontalTextAlignment="Center"></Label>
                                                                        <Label Text="{ex:Translate Name=lblNights-RequestDetails}" FontSize="11" TextColor="#387955"
                                                                               FontAttributes="Bold"></Label>
                                                                    </VerticalStackLayout>
                                                                </StackLayout>
                                                                <BoxView HorizontalOptions="FillAndExpand" Color="Gray" HeightRequest=".5"></BoxView>
                                                                <VerticalStackLayout>
                                                                    <StackLayout Orientation="Horizontal" Padding="5">
                                                                        <Label Text="{ex:Translate Name=lblCheckIn-HotelService}" TextColor="Black" FontSize="13"
                                                               FontFamily="Almarai-Regular"></Label>
                                                                        <Label Text=": " TextColor="Black" FontSize="13"></Label>
                                                                        <Label Text="{Binding CheckIn , StringFormat='{0:d}'}" TextColor="Gray" FontSize="12" VerticalTextAlignment="End"></Label>
                                                                        <Label Text="{ex:Translate Name=lblCheckOut-HotelService}" TextColor="Black" FontSize="13"
                                                               FontFamily="Almarai-Regular" HorizontalOptions="EndAndExpand"></Label>
                                                                        <Label Text=": " TextColor="Black" FontSize="13"></Label>
                                                                        <Label Text="{Binding CheckOut ,StringFormat='{0:d}'}" TextColor="Gray" FontSize="12" VerticalTextAlignment="End"></Label>
                                                                    </StackLayout>
                                                                    <Label Text="{ex:Translate Name=lblRoomDetails-RequestDetails}" TextColor="#387955" FontSize="14"
                                                           FontAttributes="Bold" Margin="0,5" Padding="5"></Label>
                                                                    <Border StrokeShape="RoundRectangle 8" StrokeThickness="1" Padding="7" Margin="10,0">
                                                                        <VerticalStackLayout Spacing="3">
                                                                            <StackLayout Orientation="Horizontal">

                                                                                <Label Text="{ex:Translate Name=lblRoomType-HotelService}" TextColor="Gray" FontSize="14"
                                                                       FontAttributes="Bold"></Label>
                                                                                <Label Text=": " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Label>
                                                                                <Label Text="{Binding RoomTypeName}" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Label>

                                                                                <Label Text="{ex:Translate Name=lblView-RequestDetails}" TextColor="Gray" FontSize="14"
                                                                       FontAttributes="Bold" HorizontalOptions="EndAndExpand"></Label>
                                                                                <Label Text=": " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Label>
                                                                                <Label Text="{Binding RoomViewName}" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Label>
                                                                            </StackLayout>
                                                                            <StackLayout Orientation="Horizontal">
                                                                                <Label Text="{ex:Translate Name=lblNoOfRoom-HotelService}" TextColor="Gray" FontSize="14"
                                                                       FontAttributes="Bold"></Label>
                                                                                <Label Text=": " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Label>
                                                                                <Label Text="{Binding RoomCount}" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Label>
                                                                                <Label Text="{ex:Translate Name=lblMeals-HotelService}" TextColor="Gray" FontSize="14"
                                                                       HorizontalOptions="EndAndExpand" FontAttributes="Bold"></Label>
                                                                                <Label Text=": " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Label>
                                                                                <Label Text="{Binding MealName}" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Label>
                                                                            </StackLayout>
                                                                            <StackLayout Orientation="Horizontal">
                                                                                <Label Text="{ex:Translate Name=lblRatePR-RequestDetails-RequestDetails}" TextColor="Gray" FontSize="14"
                                                                       FontAttributes="Bold"></Label>
                                                                                <Label Text=": " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Label>
                                                                                <Label Text="70" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Label>
                                                                                <Label Text="$" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Label>
                                                                                <Label Text="{ex:Translate Name=lblRateBasis-RequestDetails}" TextColor="Gray" FontSize="14"
                                                                       HorizontalOptions="EndAndExpand" FontAttributes="Bold"></Label>
                                                                                <Label Text=": " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Label>
                                                                                <Label Text="2B/S" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Label>
                                                                            </StackLayout>
                                                                            <StackLayout Orientation="Horizontal">
                                                                                <Label Text="{ex:Translate Name=lblMRPD-RequestDetails}" TextColor="Gray"
                                                                       FontSize="14" FontAttributes="Bold"></Label>
                                                                                <Label Text=": " TextColor="Gray" FontSize="14" FontAttributes="Bold"></Label>
                                                                                <Label Text="10" TextColor="DarkOrange" FontSize="14" FontAttributes="Bold"></Label>
                                                                            </StackLayout>
                                                                        </VerticalStackLayout>
                                                                    </Border>
                                                                </VerticalStackLayout>
                                                            </StackLayout>
                                                        </Border>
                                                    </StackLayout>
                                                </StackLayout>
                                            </DataTemplate>
                                        </CarouselView.ItemTemplate>

                                    </CarouselView>
                                    <StackLayout Spacing="10">
                                        <Label Text="{ex:Translate Name=lblTransportationServices}" TextColor="DarkOrange" FontAttributes="Bold" FontSize="16"
                                            ></Label>
                                        <syncfusion:SfDataGrid ItemsSource="{Binding RequestDetailes.RequestTravelAgencyTransport}" ColumnWidthMode="FitByCell"
                                                                   GridLinesVisibility="Both" HeaderGridLinesVisibility="Both"
                                                                   VerticalOptions="FillAndExpand">
                                            <syncfusion:SfDataGrid.Columns>
                                                <syncfusion:DataGridTextColumn MappingName="Date" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="{ex:Translate Name=lblDate-TranService}" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="FromLocation" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="{ex:Translate Name=lblFrom-TranService}" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="ToLocation" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="{ex:Translate Name=lblTo-TranService}" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="BrandName" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="{ex:Translate Name=hdrvehicle-RequestDetails}" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="TransportCount" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="{ex:Translate Name=lblNo-RequestDetails}" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="IsDriver" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="{ex:Translate Name=lblIsDriver-RequestDetails}" TextColor="Black" 
                                                                   FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                   HorizontalOptions="CenterAndExpand"></Label>
                                                            </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="TypeName" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="{ex:Translate Name=lblTypeName-RequestDetails}" TextColor="Black" 
                                                                   FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                   HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="ModelName" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="{ex:Translate Name=lblModelName-RequestDetails}" TextColor="Black" 
                                                                   FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                   HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                        
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="Notes" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="{ex:Translate Name=lblNotes-HotelService}" TextColor="Black" 
                                                                   FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                   HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="BrandName" HeaderTextAlignment="Center" Visible="False">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="BrandName" TextColor="Black" 
                                                                   FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                   HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="CarModelId" HeaderTextAlignment="Center" Visible="False">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="CarModelId" TextColor="Black" 
                                                                   FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                   HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="CarBrandId" HeaderTextAlignment="Center" Visible="False">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="CarBrandId" TextColor="Black" 
                                                                   FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                   HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="CarTypeId" HeaderTextAlignment="Center" Visible="False">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="CarTypeId" TextColor="Black" 
                                                                   FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                   HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="RequestTravelAgencyId" HeaderTextAlignment="Center" Visible="False">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="RequestTravelAgencyId" TextColor="Black" 
                                                                   FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                   HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="Id" HeaderTextAlignment="Center" Visible="False">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="Id" TextColor="Black" 
                                                                   FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                   HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                            </syncfusion:SfDataGrid.Columns>
                                            <syncfusion:SfDataGrid.Triggers>
                                                <DataTrigger TargetType="syncfusion:SfDataGrid" Binding="{Binding Lang}" Value="en">
                                                    <Setter Property="FlowDirection" Value="LeftToRight"></Setter>
                                                </DataTrigger>
                                                <DataTrigger TargetType="syncfusion:SfDataGrid" Binding="{Binding Lang}" Value="ar">
                                                    <Setter Property="FlowDirection" Value="RightToLeft"></Setter>
                                                </DataTrigger>
                                            </syncfusion:SfDataGrid.Triggers>
                                        </syncfusion:SfDataGrid>
                                        <StackLayout.Triggers>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding RequestDetailes.RequestTravelAgencyTransport.Count}" Value="0">
                                                <Setter Property="IsVisible" Value="False"></Setter>
                                                <Setter Property="HeightRequest" Value="0"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding RequestDetailes.RequestTravelAgencyTransport.Count}" Value="1">
                                                <Setter Property="HeightRequest" Value="150"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding RequestDetailes.RequestTravelAgencyTransport.Count}" Value="2">
                                                <Setter Property="HeightRequest" Value="190"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding RequestDetailes.RequestTravelAgencyTransport.Count}" Value="3">
                                                <Setter Property="HeightRequest" Value="240"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding RequestDetailes.RequestTravelAgencyTransport.Count}" Value="4">
                                                <Setter Property="HeightRequest" Value="290"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding RequestDetailes.RequestTravelAgencyTransport.Count}" Value="5">
                                                <Setter Property="HeightRequest" Value="340"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding RequestDetailes.RequestTravelAgencyTransport.Count}" Value="6">
                                                <Setter Property="HeightRequest" Value="390"></Setter>
                                            </DataTrigger>
                                        </StackLayout.Triggers>
                                    </StackLayout>
