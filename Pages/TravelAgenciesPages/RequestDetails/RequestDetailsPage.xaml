                                                            <FormattedString>
                                                                <Span Text="Madinah" TextColor="Black" FontSize="14" FontAttributes="Bold"></Span>
                                                                <Span Text=" - " TextColor="Black" FontSize="14" FontAttributes="Bold"></Span>
                                                                <Span Text="Anwaer Madinha" TextColor="Black" FontSize="14" FontAttributes="Bold"></Span>
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>
