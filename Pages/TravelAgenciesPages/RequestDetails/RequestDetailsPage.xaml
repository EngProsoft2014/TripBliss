                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                            </syncfusion:SfDataGrid.Columns>
                                        </syncfusion:SfDataGrid>
                                        <StackLayout.Triggers>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding transportaionServices.Count}" Value="0">
                                                <Setter Property="IsVisible" Value="False"></Setter>
                                                <Setter Property="HeightRequest" Value="0"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding transportaionServices.Count}" Value="1">
                                                <Setter Property="HeightRequest" Value="150"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding transportaionServices.Count}" Value="2">
                                                <Setter Property="HeightRequest" Value="190"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding transportaionServices.Count}" Value="3">
                                                <Setter Property="HeightRequest" Value="240"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding transportaionServices.Count}" Value="4">
                                                <Setter Property="HeightRequest" Value="290"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding transportaionServices.Count}" Value="5">
                                                <Setter Property="HeightRequest" Value="340"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding transportaionServices.Count}" Value="6">
                                                <Setter Property="HeightRequest" Value="390"></Setter>
                                            </DataTrigger>
                                        </StackLayout.Triggers>
                                    </StackLayout>
                                    <StackLayout Spacing="10" HeightRequest="250">
                                        <Label Text="Air Flight Service" TextColor="DarkOrange" FontAttributes="Bold" FontSize="16"
                                                   FontFamily="OpenSansSemibold"></Label>
                                        <syncfusion:SfDataGrid ItemsSource="{Binding airFlights}" ColumnWidthMode="FitByCell"
                                                                   GridLinesVisibility="Both" HeaderGridLinesVisibility="Both" 
                                                                   VerticalOptions="FillAndExpand">
                                            <syncfusion:SfDataGrid.Columns>
                                                <syncfusion:DataGridTextColumn MappingName="Date" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="Date" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="Carrier" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="Carrier" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="Class" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="Class" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="From" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="From" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="To" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="To" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="ETD" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="ETD" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="ETA" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="ETA" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="Adult" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="Adult" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="Child" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="Child" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="Infant" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="Infant" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="Notes" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="Notes" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                            </syncfusion:SfDataGrid.Columns>
                                        </syncfusion:SfDataGrid>
                                        <StackLayout.Triggers>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding airFlights.Count}" Value="0">
                                                <Setter Property="IsVisible" Value="False"></Setter>
                                                <Setter Property="HeightRequest" Value="0"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding airFlights.Count}" Value="1">
                                                <Setter Property="HeightRequest" Value="150"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding airFlights.Count}" Value="2">
                                                <Setter Property="HeightRequest" Value="190"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding airFlights.Count}" Value="3">
                                                <Setter Property="HeightRequest" Value="240"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding airFlights.Count}" Value="4">
                                                <Setter Property="HeightRequest" Value="290"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding airFlights.Count}" Value="5">
                                                <Setter Property="HeightRequest" Value="250"></Setter>
                                            </DataTrigger>
                                            <DataTrigger TargetType="StackLayout" Binding="{Binding airFlights.Count}" Value="6">
                                                <Setter Property="HeightRequest" Value="390"></Setter>
                                            </DataTrigger>
                                        </StackLayout.Triggers>
                                    </StackLayout>
                                    <StackLayout Spacing="10">
                                        <Label Text="Visa Service" TextColor="DarkOrange" FontAttributes="Bold" FontSize="16"
                                                   FontFamily="OpenSansSemibold"></Label>
                                        <syncfusion:SfDataGrid ItemsSource="{Binding visaServices}" ColumnWidthMode="FitByCell"
                                                           GridLinesVisibility="Both" HeaderGridLinesVisibility="Both">
                                            <syncfusion:SfDataGrid.Columns>
                                                <syncfusion:DataGridTextColumn MappingName="VisaType" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="Visa Type" TextColor="Black" 
                                                                 FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="VisaNo" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="Visa No" TextColor="Black" 
                                                                        FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                        HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
                                                    </syncfusion:DataGridTextColumn.HeaderTemplate>
                                                </syncfusion:DataGridTextColumn>
                                                <syncfusion:DataGridTextColumn MappingName="Notes" HeaderTextAlignment="Center">
                                                    <syncfusion:DataGridTextColumn.HeaderTemplate>
                                                        <DataTemplate>
                                                            <Label FontSize="14" Text="Notes" TextColor="Black" 
                                                                       FontAttributes="Bold" VerticalTextAlignment="Center"
                                                                       HorizontalOptions="CenterAndExpand"></Label>
                                                        </DataTemplate>
