<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TripBliss.Pages.TravelAgenciesPages.RequestDetails.AirFlightServicePage"
             xmlns:vm="clr-namespace:TripBliss.ViewModels.TravelAgenciesViewModels.CreateRequest"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False"
             Title="AirFlightServicePage">
    <ContentPage.BindingContext>
        <vm:AirFlightServicesViewModel></vm:AirFlightServicesViewModel>
    </ContentPage.BindingContext>
    <StackLayout Orientation="Vertical" Margin="20">
        <StackLayout Orientation="Horizontal">
                <ImageButton WidthRequest="30" HeightRequest="30" VerticalOptions="CenterAndExpand" Command="{Binding BackPressedCommand}">
                    <ImageButton.Source>
                        <FontImageSource Glyph="ï„„" FontFamily="FontIconSolid" Color="Gray"></FontImageSource>
                    </ImageButton.Source>
                </ImageButton>
                <Label Text="Air Flight Service" FontSize="18" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"
                       TextColor="Black" VerticalOptions="CenterAndExpand" ></Label>
            </StackLayout>
        <ScrollView VerticalOptions="FillAndExpand" Padding="0,0,0,20">
        <StackLayout >
            <Border StrokeShape="RoundRectangle 15" Margin="0,40" BackgroundColor="White">
                <StackLayout Orientation="Vertical" Padding="15,15,15,25">
                    <Label Text="Carrier" TextColor="#2fa562" FontSize="14" Margin="0,15,0,5"></Label>
                    <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" HeightRequest="40">
                        <Entry Keyboard="Text" TextColor="Black" FontSize="14" FontFamily="OpenSansRegular" IsReadOnly="True"
                               Text="{Binding Moddel.Carrier}"></Entry>
                    </Border>
                    <StackLayout Orientation="Horizontal" Spacing="35">
                        <VerticalStackLayout HorizontalOptions="FillAndExpand">
                            <Label Text="Date" TextColor="#2fa562" FontSize="14" Margin="0,15,0,5"></Label>
                                <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" HeightRequest="40">
                                <DatePicker FontSize="13" TextColor="Black" Date="{Binding Moddel.Date}"></DatePicker>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout HorizontalOptions="FillAndExpand">
                            <Label Text="Class" TextColor="#2fa562" FontSize="14" Margin="0,15,0,5"></Label>
                                <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" HeightRequest="40">
                                <Entry Keyboard="Text" TextColor="Black" FontSize="13" FontFamily="OpenSansRegular" IsReadOnly="True"
                                   Text="{Binding Moddel.Class}"></Entry>
                            </Border>
                        </VerticalStackLayout>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="35">
                        <VerticalStackLayout HorizontalOptions="FillAndExpand">
                            <Label Text="From" TextColor="#2fa562" FontSize="14" Margin="0,15,0,5"></Label>
                                <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" HeightRequest="40">
                                <Entry Keyboard="Text" TextColor="Black" FontSize="13" FontFamily="OpenSansRegular" IsReadOnly="True"
                                       Text="{Binding Moddel.From}"></Entry>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout HorizontalOptions="FillAndExpand">
                            <Label Text="To" TextColor="#2fa562" FontSize="14" Margin="0,15,0,5"></Label>
                                <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" HeightRequest="40">
                                <Entry Keyboard="Text" TextColor="Black" FontSize="13" FontFamily="OpenSansRegular" IsReadOnly="True"
                                       Text="{Binding Moddel.To}"></Entry>
                            </Border>
                        </VerticalStackLayout>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="35">
                        <VerticalStackLayout HorizontalOptions="FillAndExpand">
                            <Label Text="ETD" TextColor="#2fa562" FontSize="14" Margin="0,15,0,5"></Label>
                                <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" HeightRequest="40">
                                <Entry Keyboard="Text" TextColor="Black" FontSize="13" FontFamily="OpenSansRegular" IsReadOnly="True"
                                       Text="{Binding Moddel.ETD}"></Entry>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout HorizontalOptions="FillAndExpand">
                            <Label Text="ETA" TextColor="#2fa562" FontSize="14" Margin="0,15,0,5"></Label>
                                <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" HeightRequest="40">
                                <Entry Keyboard="Text" TextColor="Black" FontSize="13" FontFamily="OpenSansRegular" IsReadOnly="True"
                                       Text="{Binding Moddel.ETA}"></Entry>
                            </Border>
                        </VerticalStackLayout>

                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Margin="0,20,0,0">
                        <VerticalStackLayout>
                            <Label Text="Adult" TextColor="#2fa562" FontSize="14" HorizontalTextAlignment="Center"></Label>
                            <Border StrokeShape="RoundRectangle 5" HorizontalOptions="CenterAndExpand" Padding="10,5" Stroke="Gray"
                                    VerticalOptions="CenterAndExpand">
                                <Label Text="{Binding Adult}" TextColor="#2fa562" FontSize="20" VerticalTextAlignment="Center" 
                                       FontAttributes="Bold" HorizontalOptions="CenterAndExpand"></Label>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout HorizontalOptions="CenterAndExpand">
                            <Label Text="Child" TextColor="#2fa562" FontSize="14" HorizontalTextAlignment="Center"></Label>
                            <Border StrokeShape="RoundRectangle 5" HorizontalOptions="CenterAndExpand" Padding="10,5" Stroke="Gray"
                                    VerticalOptions="CenterAndExpand">
                                <Label Text="{Binding Chiled}" TextColor="#2fa562" FontSize="20" VerticalTextAlignment="Center" 
                                       FontAttributes="Bold" HorizontalOptions="CenterAndExpand"></Label>
                            </Border>
                        </VerticalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="Infant" TextColor="#2fa562" FontSize="14" HorizontalTextAlignment="Center"></Label>
                            <Border StrokeShape="RoundRectangle 5" HorizontalOptions="CenterAndExpand" Padding="10,5" Stroke="Gray"
                                    VerticalOptions="CenterAndExpand">
                                <Label Text="{Binding Infant}" TextColor="#2fa562" FontSize="20" VerticalTextAlignment="Center" 
                                       FontAttributes="Bold" HorizontalOptions="CenterAndExpand"></Label>
                            </Border>
                        </VerticalStackLayout>
                    </StackLayout>
                    <Label Text="Notes" TextColor="#2fa562" FontSize="14" Margin="0,15,0,5"></Label>
                    <Border StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="Gray" HeightRequest="100">
                        <Entry Keyboard="Text" TextColor="Black" FontSize="13" FontFamily="OpenSansRegular" IsReadOnly="True"
                               Text="{Binding Moddel.Notes}"></Entry>
                    </Border>
                </StackLayout>
                <Border.Shadow>
                    <Shadow Brush="LightGray" Offset="8,8" Opacity="0.8"></Shadow>
                </Border.Shadow>
            </Border>
            
        </StackLayout>
    </ScrollView>
    </StackLayout>
    
</ContentPage>